<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer_add_server"
    android:layout_width="@dimen/material_248dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/material_16dp"
        android:layout_marginTop="@dimen/material_16dp"
        android:background="@drawable/primary_custom_btn_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/material_16dp"
        android:paddingTop="@dimen/material_16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/material_8dp"
            android:src="@drawable/ic_add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/material_8dp"
            android:text="@string/drawer.add"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"/>
    </LinearLayout>

</FrameLayout>
